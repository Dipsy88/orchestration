<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">

  <persistence-unit name="defaultPersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


    <class>io.github.cloudiator.iaas.common.persistance.entities.Cloud</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.Tenant</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.LocationModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.GeoLocation</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.ImageModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.HardwareModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.HardwareOffer</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.OperatingSystemModel</class>

    <properties>

      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/iaas"/>
      <property name="javax.persistence.jdbc.user" value="iaas"/>
      <property name="javax.persistence.jdbc.password" value="iaas"/>

    </properties>
  </persistence-unit>

</persistence>
