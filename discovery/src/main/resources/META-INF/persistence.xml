<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="2.0"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

  <persistence-unit name="defaultPersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>io.github.cloudiator.iaas.common.persistance.entities.ApiModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.CloudConfigurationModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.PropertyModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.CloudCredentialModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.CloudModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.TenantModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.LocationModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.GeoLocationModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.ImageModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.HardwareModel</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.HardwareOffer</class>
    <class>io.github.cloudiator.iaas.common.persistance.entities.OperatingSystemModel</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <property name="hibernate.c3p0.min_size" value="5"/>
      <property name="hibernate.c3p0.max_size" value="20"/>
      <property name="hibernate.c3p0.timeout" value="300"/>

      <!--<property name="hibernate.connection.provider_class"
        value="org.hibernate.connection.C3P0ConnectionProvider"/>-->
    </properties>
  </persistence-unit>

</persistence>
